<div class="toast{% if attr.shown %} show{% endif %}{{ attr.class }}"
    role="alert"
    aria-live="assertive"
    aria-atomic="true"
    style="{{ attr.style }}"
    data-bs-autohide="true"
    {{ attributes|safe }}
    {{ params|join(' ') }}>
    {% if attr.title %}
      <div class="toast-header">
        <strong class="me-auto">{{ attr.title }}</strong>
        {% if attr.subtitle %}<small>{{ attr.subtitle }}</small>{% endif %}
        {% cmp 'button', classBase='', variant='close', dataBsDismiss='toast', ariaLabel='Close' %}{% endcmp %}
      </div>
    {% endif %}
    <div class="toast-body">
    {{ attr.content|d(content|safe) }}
    </div>
</div>
