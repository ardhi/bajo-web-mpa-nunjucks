<div
    class="alert{% if attr.variant %} alert-{{ attr.variant }}{% endif %}{% if attr.dismissible %} alert-dismissible fade show{% endif %}{{ attr.class }}"
    style="{{ attr.style }}"
    {{ attributes|safe }}
    {{ params|join(' ') }}
    role="alert">
    {{ attr.content|d(content|safe) }}
    {% if attr.dismissible %}<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>{% endif %}
    </div>